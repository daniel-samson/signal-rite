<?xml version="1.0"?>
<ruleset name="SignalRite">
    <description>PHP CodeSniffer configuration for SignalRite (PHP 7.2, Symfony 3)</description>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Exclude paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/var/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/logs/*</exclude-pattern>

    <!-- PHP version -->
    <config name="php_version" value="70200"/>

    <!-- Use PSR-2 standard (appropriate for Symfony 3 / PHP 7.2 era) -->
    <rule ref="PSR2">
        <!-- Allow CRLF line endings (Windows compatibility) -->
        <exclude name="Generic.Files.LineEndings"/>
    </rule>

    <!-- Line length: warn at 120, error at 150 -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Show progress and use colors -->
    <arg value="sp"/>
    <arg name="colors"/>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>
</ruleset>
