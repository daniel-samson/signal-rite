{% extends 'unauthorised.html.twig' %}

{% block title %}Reset Password - Signal Rite{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-header">
        <h1>Reset Password</h1>
        <p>Enter your new password below.</p>
    </div>

    <form class="form" method="post" novalidate>
        <div class="form-group{% if errors.password is defined %} has-error{% endif %}">
            <label for="password">New Password</label>
            <input type="password" id="password" name="password" required minlength="8" autofocus>
            <small class="form-hint">Minimum 8 characters</small>
            {% if errors.password is defined %}
                <span class="form-error">{{ errors.password }}</span>
            {% endif %}
        </div>

        <div class="form-group{% if errors.password_confirm is defined %} has-error{% endif %}">
            <label for="password_confirm">Confirm New Password</label>
            <input type="password" id="password_confirm" name="password_confirm" required>
            {% if errors.password_confirm is defined %}
                <span class="form-error">{{ errors.password_confirm }}</span>
            {% endif %}
        </div>

        <div class="form-actions">
            <button type="submit" class="variant--primary">Reset Password</button>
        </div>

        <div class="form-footer">
            <a href="{{ path('login') }}">Back to Sign In</a>
        </div>
    </form>
</div>
{% endblock %}
