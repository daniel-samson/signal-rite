{% extends 'unauthorised.html.twig' %}

{% block title %}Register - Signal Rite{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-header">
        <h1>Create Account</h1>
        <p>Get started with Signal Rite today.</p>
    </div>

    <form class="form" method="post" novalidate>
        <div class="form-group{% if errors.email is defined %} has-error{% endif %}">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ email|default('') }}" required autofocus>
            {% if errors.email is defined %}
                <span class="form-error">{{ errors.email }}</span>
            {% endif %}
        </div>

        <div class="form-group{% if errors.plainPassword is defined %} has-error{% endif %}">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required minlength="8">
            <small class="form-hint">Minimum 8 characters</small>
            {% if errors.plainPassword is defined %}
                <span class="form-error">{{ errors.plainPassword }}</span>
            {% endif %}
        </div>

        <div class="form-group{% if errors.password_confirm is defined %} has-error{% endif %}">
            <label for="password_confirm">Confirm Password</label>
            <input type="password" id="password_confirm" name="password_confirm" required>
            {% if errors.password_confirm is defined %}
                <span class="form-error">{{ errors.password_confirm }}</span>
            {% endif %}
        </div>

        <div class="form-actions">
            <button type="submit" class="variant--primary">Create Account</button>
        </div>

        <div class="form-footer">
            Already have an account? <a href="{{ path('login') }}">Sign In</a>
        </div>
    </form>
</div>
{% endblock %}
